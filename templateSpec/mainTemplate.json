{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_sasToken": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {},
    "resources": [
        // w/o back-compat
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "temp1",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/temp1.json", 
                    // converted to: "uri": "[uri(deployment().properties.templateLink.uri, 'artifacts/temp1.json')]"
                    "contentVersion": "1.0.0.0" // do we still need this? isn't content version declared in the template?
                },
                "parameters": {}
            }
        },
        // w/ back-compat
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "temp2",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "[concat('artifacts/temp2.json', parameters('_sasToken'))]",
                    // converted to: "uri": "[concat(uri(deployment().properties.templateLink.uri, 'artifacts/temp2.json'), parameters('_sasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {}
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2017-03-30",
            "name": "vm-001",
            "location": "eastus",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    // back-compat with a sasToken
                    "fileUris": ["[ContentArtifact('artifacts/script.sh', parameters('_sasToken')).uri]"], 
                    // converts to: "fileUris": ["[concat(uri(deployment().properties.templateLink.uri, 'scripts/init.sh'), parameters('_sasToken'))]"],
                    "commandToExecute": "bash init.sh"
                },
                "protectedSettings": {}
            }
        }
    ],
    "outputs": {}
}